name: Deploy to Server

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  deploy:
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'

    steps:
      - name: 检出代码
        uses: actions/checkout@v3

      - name: 部署到服务器
        uses: appleboy/ssh-action@v0.1.5
        with:
          host: ${{ secrets.HOST }}
          username: ${{ secrets.USERNAME }}
          key: ${{ secrets.SSH_KEY }}
          port: ${{ secrets.PORT }}
          script: |
            # 进入项目目录
            cd /opt/sidifensen_blog

            # 拉取最新代码
            git pull origin main

            # 重新构建和启动服务
            cd script
            docker-compose down
            docker-compose up -d --build

            # 健康检查
            sleep 30
            echo "检查服务状态..."
            docker-compose ps

            # 检查后端服务
            if curl -f http://localhost:5000/actuator/health > /dev/null 2>&1; then
              echo "✅ 后端服务正常"
            else
              echo "⚠️ 后端服务可能未就绪"
            fi

            # 检查前端服务
            if curl -f http://localhost:8000 > /dev/null 2>&1; then
              echo "✅ 管理端前端正常"
            else
              echo "⚠️ 管理端前端可能未就绪"
            fi

            if curl -f http://localhost:7000 > /dev/null 2>&1; then
              echo "✅ 用户端前端正常"
            else
              echo "⚠️ 用户端前端可能未就绪"
            fi

            echo "🎉 部署完成！"
